<!-- CATEGORY VIEW (topbar + chips + lista de platos) -->
<section class="screen screen--category" id="viewCategory" aria-hidden="true">
  <header class="topbar">
    <button
      class="iconBtn"
      id="backBtn"
      type="button"
      aria-label="Volver"
      data-i18n="back"
      data-i18n-attr="aria-label"
    >
      <svg viewBox="0 0 24 24" aria-hidden="true">
        <path d="M15 18 9 12l6-6" />
      </svg>
    </button>
    <div class="topbarTitle" id="categoryTitle">Categoria</div>
    <button
      class="iconBtn"
      id="catSearchBtn"
      type="button"
      aria-label="Buscar"
      data-i18n="search"
      data-i18n-attr="aria-label"
    >
      <svg viewBox="0 0 24 24" aria-hidden="true">
        <path
          d="M10 18a8 8 0 1 1 5.293-14.293A8 8 0 0 1 10 18zm11 3-5.2-5.2"
        />
      </svg>
    </button>
  </header>

  <div class="listWrap">
    <div
      class="chipsBar"
      aria-label="Subcategorias"
      data-i18n="subcategories"
      data-i18n-attr="aria-label"
    >
      <div class="chipsTrack" id="subcatChips"></div>
    </div>

    <main class="list" id="dishList" aria-live="polite">
      <div class="loading" data-i18n="loading">Cargando...</div>
    </main>
  </div>
</section>
