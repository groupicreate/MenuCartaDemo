<!-- HOME (portada + botones de categorias) -->
<section class="screen screen--home" id="viewHome" aria-hidden="false">
  <header class="homeCard">
    <div class="cover" id="cover">
      <img id="coverImg" alt="" />
      <div class="coverTop">
        <div class="langSelect">
          <button
            class="pill"
            id="langBtn"
            type="button"
            aria-label="Idioma"
            aria-haspopup="menu"
            aria-expanded="false"
            data-i18n="lang_button"
            data-i18n-attr="aria-label"
          >
            <span id="langLabel" data-i18n="lang_label">Español</span>
            <svg viewBox="0 0 24 24" aria-hidden="true">
              <path d="M7 10l5 5 5-5" />
            </svg>
          </button>
          <div class="langMenu" id="langMenu" role="menu" aria-hidden="true">
            <button class="langOption" type="button" role="menuitem" data-lang="es">
              Español
            </button>
            <button class="langOption" type="button" role="menuitem" data-lang="en">
              English
            </button>
          </div>
        </div>
        <button
          class="iconBtn"
          id="homeSearchBtn"
          type="button"
          aria-label="Buscar"
          data-i18n="search"
          data-i18n-attr="aria-label"
        >
          <svg viewBox="0 0 24 24" aria-hidden="true">
            <path
              d="M10 18a8 8 0 1 1 5.293-14.293A8 8 0 0 1 10 18zm11 3-5.2-5.2"
            />
          </svg>
        </button>
      </div>
    </div>

    <div class="homeBody">
      <h1 class="placeTitle" id="placeTitle">Carta</h1>

      <div
        class="categoryButtons"
        id="homeCategories"
        aria-label="Categorias"
        data-i18n="categories"
        data-i18n-attr="aria-label"
      ></div>

      <div class="homeInfo" id="homeInfo">
        <button
          class="rowBtn"
          id="ratingBtn"
          type="button"
          aria-label="Valoracion"
          data-i18n="ratings"
          data-i18n-attr="aria-label"
          style="display: none"
        >
          <div class="rowIcon" aria-hidden="true">
            <svg viewBox="0 0 24 24">
              <path
                d="M12 17.27 18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"
              />
            </svg>
          </div>
          <div class="rowText">
            <div class="rowPrimary" id="ratingPrimary"></div>
            <div class="rowSecondary" id="ratingSecondary"></div>
          </div>
          <div class="rowChevron" aria-hidden="true">&#8250;</div>
        </button>

        <button
          class="rowBtn"
          id="infoBtn"
          type="button"
          aria-label="Info"
          data-i18n="info"
          data-i18n-attr="aria-label"
          style="display: none"
        >
          <div class="rowIcon" aria-hidden="true">
            <svg viewBox="0 0 24 24">
              <path
                d="M12 2a10 10 0 1 0 .001 20.001A10 10 0 0 0 12 2zm0 7a1.25 1.25 0 1 1 0-2.5A1.25 1.25 0 0 1 12 9zm2 9h-4v-2h1v-4h-1v-2h3v6h1v2z"
              />
            </svg>
          </div>
          <div class="rowText">
            <div class="rowPrimary" data-i18n="info">Info</div>
            <div class="rowSecondary" id="infoSecondary" data-i18n="info_secondary_default">
              Wi‑Fi, Teléfono y Dirección
            </div>
          </div>
          <div class="rowChevron" aria-hidden="true">&#8250;</div>
        </button>
      </div>
    </div>
  </header>
</section>
